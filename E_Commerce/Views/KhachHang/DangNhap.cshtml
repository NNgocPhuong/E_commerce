@model E_Commerce.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form asp-controller="KhachHang" asp-action="DangNhap" method="post">
            <div class="form-group">
                <label asp-for="@Model.Username"></label>
                <input type="text" class="form-control" asp-for="@Model.Username" value="@Model.Username">
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" class="form-control" id="MatKhau" asp-for="@Model.Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>
